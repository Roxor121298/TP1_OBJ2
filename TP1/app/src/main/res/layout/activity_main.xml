<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/cafe_filtre"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="521dp"
        android:orientation="vertical">

        <!-- Replace with your coffee image -->

        <ImageView
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_weight="1"
            android:src="@drawable/cafe_filtre" />

        <TextView
            android:layout_width="127dp"
            android:layout_height="67dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Café filtre"
            android:textSize="18sp" />

        <!-- Add other coffee details like calories and price here -->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/americano"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="185dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="521dp"
        android:orientation="vertical">

        <!-- Replace with your coffee image -->

        <ImageView
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_weight="1"
            android:src="@drawable/americano" />

        <TextView
            android:layout_width="127dp"
            android:layout_height="67dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Americano"
            android:textSize="18sp" />

        <!-- Add other coffee details like calories and price here -->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cafe_glace"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="250dp"
        android:orientation="vertical">

        <!-- Replace with your coffee image -->

        <ImageView
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_weight="1"
            android:src="@drawable/cafe_glace" />

        <TextView
            android:layout_width="127dp"
            android:layout_height="67dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Café galcé"
            android:textSize="18sp" />

        <!-- Add other coffee details like calories and price here -->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/latte"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="185dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="250dp"
        android:orientation="vertical">

        <!-- Replace with your coffee image -->

        <ImageView
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_weight="1"
            android:src="@drawable/latte" />

        <TextView
            android:layout_width="127dp"
            android:layout_height="67dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Latté"
            android:textSize="18sp" />

        <!-- Add other coffee details like calories and price here -->

    </LinearLayout>

    <!-- A partir de ici nous sommes dan sle menu en bas -->

    <LinearLayout
        android:id="@+id/Order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:background="#FFCCBC">

        <RadioGroup
            android:id="@+id/choixTaille"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/radioButtonSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Petit" />

            <RadioButton
                android:id="@+id/radioButtonMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moyen"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioButtonLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grand" />
        </RadioGroup>

        <TextView
            android:id="@+id/indicePrixCalorie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ce produit contient : 5 calorie et coûte : 1,00$"
            android:textSize="16sp"
            android:gravity="left"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnAjouter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AJOUTER"
            android:layout_marginBottom="8dp" />


        <TextView
            android:id="@+id/totalEtTaxes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total: 1,15$"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnEffacer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EFFACER"
                android:layout_marginRight="16dp" />

            <Button
                android:id="@+id/btnCommander"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMMANDER" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>